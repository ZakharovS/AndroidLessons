<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    tools:context=".main">

    <TextView
        style="@style/mainTextView"
        android:layout_weight="0.06"
        android:background="#aebef7"
        android:text="@string/lesson_second" />

    <TextView
        android:id="@+id/fibonacciOutputText"
        style="@style/mainTextView"
        android:layout_weight="0.06"
        android:background="#faf59d"
        android:text="@string/result" />

    <EditText
        android:id="@+id/fibonacciInputText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter yor value for get Fibonacci"
        android:textAlignment="center" />

    <Button
        android:id="@+id/fibonacciButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.04"
        android:text="Calculate Fibonacci"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/factorialOutputText"
        style="@style/mainTextView"
        android:layout_weight="0.06"
        android:background="#faf59d"
        android:text="@string/result" />

    <EditText
        android:id="@+id/factorialInputText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter yor value for get Factorial"
        android:textAlignment="center" />

    <Button
        android:id="@+id/factorialButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.04"
        android:text="Calculate Factorial"
        android:textAlignment="center" />
</LinearLayout>